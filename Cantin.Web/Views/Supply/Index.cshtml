    </div>
    <div class="card-body">
        <div class="row">
            <!-- Tarih Aralığı için Date Picker -->
            <div class="filter-item col-md-5 mb-3">
                <label for="startDate">Aralık Seçin:</label>
                <select id="datePeriodSelect">
                    <option value="">Herzaman</option>
                    <option value="today">Bugün</option>
                    <option value="thisWeek">Bu Hafta</option>
                    <option value="thisMonth">Bu Ay</option>
                    <option value="thisYear">Bu Yıl</option>
                    <option value="specificPeriod">Özel</option>
                </select>
            </div>
            <div class="filter-item col-md-5 mb-3">
                <label for="startDate">Son Kullanım Tarihi Aralık Seçin:</label>
                <select id="datePeriodSelectForExpriation">
                    <option value="">Herzaman</option>
                    <option value="tomorrow">Yarın</option>
                    <option value="nextWeek">Sonraki Hafta</option>
                    <option value="nextMonth">Sonraki Ay</option>
                    <option value="nextYear">Sonraki Yıl</option>
                    <option value="specificPeriod">Özel</option>
                </select>
            </div>
            <div class="filter-item col-md-5 mb-3">
                <label for="startDate">Başlangıç Tarihi:</label>
                <input type="date" id="startDate" disabled>
            </div>

            <div class="filter-item col-md-5 mb-3">
                <label for="startDate">Son Kullanım Başlangıç Tarihi:</label>
                <input type="date" id="startDateForExpriation" disabled>
            </div>
            <div class="filter-item col-md-5 mb-3">
                <label for="endDate">Bitiş Tarihi:</label>
                <input type="date" id="endDate" disabled>
            </div>


            <div class="filter-item col-md-5 mb-3">
                <label for="endDate">Son Kullanım Bitiş Tarihi:</label>
                <input type="date" id="endDateForExpriation" disabled>
            </div>

            <!-- Sayı Aralığı için Inputlar -->
            <div class="filter-item col-md-5 mb-3">
                <label for="minValue">Tedarik Toplam Min Değer:</label>
                <input type="number" id="minValueForSalePrice">
            </div>

            <div class="filter-item col-md-5 mb-3">
                <label for="maxValue">Tedarik Toplam Max Değer:</label>
                <input type="number" id="maxValueForSalePrice">
            </div>

            <!-- Birden Fazla Seçim Yapabileceğiniz Select Kutusu -->
                <div class="filter-item col-md-3 mb-3">
                    
            </div>
            
        </div>
        <label for="multiSelect">Ürünler Seçim Yap:</label>
        <select id="ProductIdSelect" class="" asp-items="@(new SelectList(ViewBag.Products,"Id","Name"))" multiple="multiple">
        </select>
        <button class="btn btn-primary" id="filterButton">Filtrele</button>
        <!--begin: Datatable-->
        <div class="table-responsive">

            <table id="SuppliesTable" class="table table-separate table-head-custom table-checkable display responsive nowrap" Supply="grid" aria-describedby="kt_datatable_info" style="width:100%">
                <thead>
                    <tr supply="row">
                        <th class="dt-control sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 31px;"></th>
                        <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Tedarikçi</th>
                        <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Tedarik Sayısı</th>
                        <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Tedarik Edilen Ürün Sayısı</th>
                        <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Toplam Harcama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supply in Model)
                    {
                        int totalProduct = 0;
                        float totalSpending = 0;
                        foreach (SupplyLine line in supply.SupplyLines)
                        {
                            totalProduct += line.Quantity;
                            totalSpending += line.Total;
                        }
                        <tr stock="row" data-supply-lines='@Json.Serialize(supply.SupplyLines)' class="even">
                            <td class="dt-control"></td>
                            <td>@supply.Supplier</td>
                            <td>@supply.SupplyLines.Count</td>
                            <td>@totalProduct</td>
                            <td>@totalSpending₺</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!--end: Datatable-->
        </div>
    </div>
</div>

