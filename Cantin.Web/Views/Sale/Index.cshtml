@model List<SaleDto>
<!--begin::Card-->
<div class="card card-custom">
	<div class="card-header flex-wrap">
		<div class="card-title">
			<h3 class="card-label">
				Satışlar
			</h3>
		</div>
		<div class="card-toolbar">
			<!--begin::Button-->
			<!--end::Button-->
		</div>

	</div>
	<div class="card-body">
		<!--begin: Datatable-->
		<div id="kt_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
			<div class="row">
				<div class="col-sm-12">
					<table id="SalesTable" class="table table-separate table-head-custom table-checkable dataTable no-footer dtr-inline" product="grid" aria-describedby="kt_datatable_info" style="width: 1150px;">
						<thead>
							<tr product="row">
								<th class="dt-control sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 31px;"></th>
								<th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Mağaza</th>
								<th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Satış Tarihi</th>
								<th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 45px;">Toplam Fiyat</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var sale in Model)
							{
								<tr data-products-line ='@Json.Serialize(sale.ProductLines?.ToArray())' product="row" class="even">
									<td class="dt-control"></td>
									<td>@sale.Store!.Name</td>
									<td>@sale.CreatedDate.ToString()</td>
									<td>@sale.SoldTotal₺</td>

								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
			<!--end: Datatable-->
		</div>
	</div>
</div>

<!--end::Card-->
@section Scripts{
	<script src="~/js/SaleIndex.js"></script>
}